# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000
CLIENT_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/vidyai
REDIS_URL=redis://localhost:6379

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_AUTH_DOMAIN=your-auth-domain
FIREBASE_STORAGE_BUCKET=your-storage-bucket

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ELEVEN_LABS_API_KEY=your-elevenlabs-api-key

# Storage Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=vidyai-uploads

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3001
GRAFANA_PASSWORD=admin

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@vidyai.com

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# AI Service Configuration
MAX_AUDIO_SIZE_MB=10
MAX_IMAGE_SIZE_MB=5
MAX_TEXT_LENGTH=5000
MAX_CODE_LENGTH=10000

# Translation Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=["en","ta","hi","te"]

# PWA Configuration
WORKBOX_DEBUG=false
OFFLINE_CACHE_SIZE=50
BACKGROUND_SYNC_RETRY=3

# Security Configuration
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
TRUST_PROXY=true
SECURE_COOKIES=false # Set to true in production

# Feature Flags
ENABLE_AUDIO_FEEDBACK=true
ENABLE_HANDWRITING_RECOGNITION=true
ENABLE_CODE_EVALUATION=true
ENABLE_OFFLINE_MODE=true